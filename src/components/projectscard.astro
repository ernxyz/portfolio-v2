---
import Melayout from "../layouts/Melayout.astro";

const { idToGo } = Astro.props;

// Project data for cleaner code
const projects = [
  {
    title: "Negozi",
    image: "/projects/negozi.png",
    description: "It is an app to boost local commerce, especially for offers and deals, based in Venezuela. Built with React, Zustand, MUI, Supabase, Deno, Hono.js.",
    github: null,
    demo: "https://negozi.lat",
    tags: ["React", "Supabase", "Deno"]
  },
  {
    title: "Bistrapp",
    image: "/projects/bistrapp.jpeg",
    description: "It is an app that allows restaurants to get a QR code so customers are able to download their digital menu. Built with Astro, Preact, Tailwind CSS, Daisy UI, Appwrite and Bun.js.",
    github: null,
    demo: "https://bistrapp.negozi.lat",
    tags: ["Astro", "Appwrite", "Tailwind"]
  },
  {
    title: "Random Episodes",
    image: "/projects/random-epi.png",
    description: "It is an app that allows users to look for their favorite TV shows and get a random episode of it as a recommendation. Useful when you want to rewatch your favorite shows and can't decide on a specific episode.",
    github: "https://github.com/ernxyz/tv-shows",
    demo: "https://random-episodes.onrender.com",
    tags: ["JavaScript", "API", "Frontend"]
  }
];
---

<Melayout idToGo={idToGo}>
  <div class="h-full flex flex-col py-4">
    <div class="text-center mb-8 relative">
      <span class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-full text-6xl text-acid-green/10 font-bold">&lt;/&gt;</span>
      <h1 class="text-3xl lg:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-acid-orange to-acid-green font-bold inline-block">
        Latest Projects
      </h1>
      <div class="h-1 w-32 bg-gradient-to-r from-acid-orange to-acid-green rounded-full mt-3 mx-auto"></div>
    </div>

    <div class="flex-grow grid grid-cols-1 md:grid-cols-3 gap-6 pb-4">
      {projects.map((project, index) => (
        <div class="group relative">
          <!-- Card glow effect -->
          <div class="absolute -inset-0.5 bg-gradient-to-r from-acid-green/0 via-acid-green/30 to-acid-orange/30 rounded-xl blur opacity-0 group-hover:opacity-100 transition duration-700"></div>
          
          <!-- Project Card -->
          <div class="bg-gray-900/80 backdrop-blur-sm p-6 rounded-xl border border-gray-800/60
                     shadow-lg relative h-full flex flex-col
                     transform transition-all duration-500 ease-out
                     group-hover:translate-y-[-4px] group-hover:border-acid-green/30">
            
            <!-- Project image with frame -->
            <div class="relative mb-4 overflow-hidden rounded-lg border border-gray-700/50 group-hover:border-acid-green/30 transition-colors duration-300">
              <div class="absolute inset-0 bg-gradient-to-br from-acid-green/20 to-acid-orange/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 z-10"></div>
              <img 
                src={project.image || "/placeholder.svg"} 
                alt={`${project.title} Logo`} 
                class="w-56 h-56 object-cover flex justify-self-center transition-transform duration-700 group-hover:scale-110"
              />
            </div>
            
            <!-- Project title with animated underline -->
            <h3 class="text-2xl text-acid-green font-semibold text-center mb-3 relative">
              {project.title}
              <span class="absolute bottom-0 left-1/2 w-0 h-0.5 bg-acid-green/50 transform -translate-x-1/2 transition-all duration-300 group-hover:w-1/2"></span>
            </h3>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 justify-center mb-3">
              {project.tags.map(tag => (
                <span class="text-xs bg-gray-800/80 text-acid-green/80 px-2 py-1 rounded-full border border-gray-700/50">
                  {tag}
                </span>
              ))}
            </div>
            
            <!-- Description -->
            <p class="text-gray-400 text-center flex-grow text-lg leading-relaxed">
              {project.description}
            </p>
            
            <!-- Links -->
            <div class="mt-4 flex justify-center space-x-4 pt-3 border-t border-gray-800/50">
              {project.github ? (
                <a href={project.github} target="_blank" rel="noopener noreferrer" 
                  class="text-acid-green hover:text-acid-orange transition-colors duration-300 flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  GitHub
                </a>
              ) : (
                <span class="text-gray-500 opacity-70 flex items-center gap-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                  Private
                </span>
              )}
              
              <a href={project.demo} target="_blank" rel="noopener noreferrer" 
                class="text-acid-green hover:text-acid-orange transition-colors duration-300 flex items-center gap-1">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                  <polyline points="15 3 21 3 21 9"></polyline>
                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
                Demo
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</Melayout>