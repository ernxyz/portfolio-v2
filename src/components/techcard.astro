---
import Melayout from "../layouts/Melayout.astro";

const { idToGo } = Astro.props;

// Tech categories data for cleaner code
const techCategories = [
  {
    title: "Frontend",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M2 12s3-7 10-7 10 7 10 7-3 7-10 7-10-7-10-7Z"/><circle cx="12" cy="12" r="3"/></svg>`,
    items: ["React", "Next.js", "Astro", "Svelte"]
  },
  {
    title: "Backend",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="8" rx="2" ry="2"/><rect x="2" y="14" width="20" height="8" rx="2" ry="2"/><line x1="6" y1="6" x2="6.01" y2="6"/><line x1="6" y1="18" x2="6.01" y2="18"/></svg>`,
    items: ["Node.js", "Express", "Deno", "Hono.js"]
  },
  {
    title: "Databases",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><ellipse cx="12" cy="5" rx="9" ry="3"/><path d="M21 12c0 1.66-4 3-9 3s-9-1.34-9-3"/><path d="M3 5v14c0 1.66 4 3 9 3s9-1.34 9-3V5"/></svg>`,
    items: ["MongoDB", "PostgreSQL", "Supabase", "Appwrite"]
  },
  {
    title: "DevOps & Tools",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z"/></svg>`,
    items: ["Git, Docker", "CI/CD (GitHub Actions)", "Testing (Vitest, Playwright)"]
  },
  {
    title: "APIs & Architecture",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/></svg>`,
    items: ["REST APIs", "GraphQL"]
  },
  {
    title: "Other Languages",
    icon: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>`,
    items: ["Kotlin", "Java (Android & Backend)", "C#", "Python", "PHP"]
  }
];
---

<Melayout idToGo={idToGo}>
  <div class="h-full flex flex-col py-4">
    <div class="text-center mb-8 relative">
      <span class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-full text-6xl text-acid-green/10 font-bold">&lt;/&gt;</span>
      <h1 class="text-3xl lg:text-5xl text-transparent bg-clip-text bg-gradient-to-r from-acid-orange to-acid-green font-bold inline-block">
        Technologies I Use
      </h1>
      <div class="h-1 w-32 bg-gradient-to-r from-acid-orange to-acid-green rounded-full mt-3 mx-auto"></div>
    </div>

    <div class="flex-grow grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-5 pb-4">
      {techCategories.map((category) => (
        <div class="group relative">
          <!-- Card glow effect -->
          <div class="absolute -inset-0.5 bg-gradient-to-r from-acid-green/0 via-acid-green/30 to-acid-orange/30 rounded-xl blur opacity-0 group-hover:opacity-100 transition duration-700"></div>
          
          <!-- Tech Category Card -->
          <div class="bg-gray-900/80 backdrop-blur-sm p-5 rounded-xl border border-gray-800/60
                     shadow-lg relative h-full
                     transform transition-all duration-500 ease-out
                     group-hover:translate-y-[-4px] group-hover:border-acid-green/30">
            
            <!-- Category header with icon -->
            <div class="flex items-center gap-2 mb-4">
              <div class="p-2 bg-gray-800 rounded-lg text-acid-green/90 group-hover:text-acid-green transition-colors duration-300" set:html={category.icon}></div>
              <h3 class="text-2xl text-acid-green font-semibold">{category.title}</h3>
            </div>
            
            <!-- Tech list with animations -->
            <ul class="list-none space-y-2">
              {category.items.map((item, index) => (
                <li class="flex items-center gap-2 group/item transition-all duration-300 hover:pl-2">
                  <span class="w-1.5 h-1.5 rounded-full bg-acid-green/50 group-hover/item:bg-acid-green transition-colors duration-300"></span>
                  <span class="text-gray-300 group-hover/item:text-acid-green transition-colors duration-300">{item}</span>
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
    
    <div class="mt-auto relative flex">
      <!-- Decorative line -->
      <div class="absolute top-0 left-1/2 transform -translate-x-1/2 w-1/2 h-px bg-gradient-to-r from-transparent via-acid-green/30 to-transparent"></div>
      
      <p class="text-lg text-gray-400 leading-relaxed text-center mt-6 px-4 max-w-3xl mx-auto">
        Always eager to learn and take on new challenges, I'm looking for opportunities to contribute to innovative teams and build impactful software.
      </p>
      
      <!-- CTA Button -->
      <div class="flex justify-center mt-4">
        <a href="#contact" class="group relative inline-flex items-center justify-center px-8 py-3 overflow-hidden font-medium transition duration-300 ease-out border-2 border-acid-green rounded-full shadow-md">
          <span class="absolute inset-0 flex items-center justify-center w-full h-full text-white duration-300 -translate-x-full bg-acid-green group-hover:translate-x-0 ease">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </span>
          <span class="absolute flex items-center justify-center w-full h-full text-acid-green transition-all duration-300 transform group-hover:translate-x-full ease">Get in Touch</span>
          <span class="relative invisible">Get in Touch</span>
        </a>
      </div>
    </div>
  </div>
</Melayout>