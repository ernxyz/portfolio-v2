---
import Melayout from "../layouts/Melayout.astro";

const { idToGo } = Astro.props

let idToGoBack

if(idToGo >= 2) idToGoBack = idToGo - 2
else idToGoBack = idToGo + 1
---

<Melayout
  idToGo={idToGo}
>
  <div
    class=`
      lg:flex-row
      flex
      flex-col
      items-center
      justify-center
    `
  >
  <div
    class="w-full"
  >

    
    <div
      class=`
        text-center
      `
    >
      <h1 class="text-3xl lg:text-5xl text-acid-orange font-bold pb-2">
        Techonologies I Use
      </h1>
      <!-- <h2 class=`text-xl lg:text-3xl text-acid-green`>
        Full-Stack Javascript Developer
      </h2> -->
    </div>

    <div
      class=`
        size-full
        my-8
        text-justify
      `
    >
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Frontend Frameworks & Libraries -->
        <div class="bg-gray-900 p-6 rounded-xl shadow-md">
          <h3 class="text-2xl text-acid-green font-semibold mb-3">Frontend</h3>
          <ul class="list-disc list-inside text-lg space-y-2">
            <li>React</li>
            <li>Next.js</li>
            <li>Astro</li>
            <li>Svelte</li>
          </ul>
        </div>
      
        <!-- Backend & APIs -->
        <div class="bg-gray-900 p-6 rounded-xl shadow-md">
          <h3 class="text-2xl text-acid-green font-semibold mb-3">Backend</h3>
          <ul class="list-disc list-inside text-lg space-y-2">
            <li>Node.js</li>
            <li>Express</li>
            <li>Deno</li>
            <li>Hono.js</li>
          </ul>
        </div>
      
        <!-- Databases -->
        <div class="bg-gray-900 p-6 rounded-xl shadow-md">
          <h3 class="text-2xl text-acid-green font-semibold mb-3">Databases</h3>
          <ul class="list-disc list-inside text-lg space-y-2">
            <li>MongoDB</li>
            <li>PostgreSQL</li>
            <li>Supabase</li>
            <li>Appwrite</li>
          </ul>
        </div>
      
        <!-- DevOps & Tools -->
        <div class="bg-gray-900 p-6 rounded-xl shadow-md">
          <h3 class="text-2xl text-acid-green font-semibold mb-3">DevOps & Tools</h3>
          <ul class="list-disc list-inside text-lg space-y-2">
            <li>Git, Docker</li>
            <li>CI/CD (GitHub Actions)</li>
            <li>Testing (Vitest, Playwright)</li>
          </ul>
        </div>
      
        <!-- APIs & Architecture -->
        <div class="bg-gray-900 p-6 rounded-xl shadow-md">
          <h3 class="text-2xl text-acid-green font-semibold mb-3">APIs & Architecture</h3>
          <ul class="list-disc list-inside text-lg space-y-2">
            <li>REST APIs</li>
            <li>GraphQL</li>
          </ul>
        </div>
      
        <!-- Other Languages -->
        <div class="bg-gray-900 p-6 rounded-xl shadow-md">
          <h3 class="text-2xl text-acid-green font-semibold mb-3">Other Languages</h3>
          <ul class="list-disc list-inside text-lg space-y-2">
            <li>Kotlin</li>
            <li>Java (Android & Backend)</li>
            <li>C#</li>
            <li>Python</li>
            <li>PHP</li>
          </ul>
        </div>
      </div>
      
      <p class="text-lg text-gray-500 leading-relaxed text-center mt-8">
        Always eager to learn and take on new challenges, Iâ€™m looking for opportunities to contribute to innovative teams and build impactful software.
      </p>
      
    </div>
  </div>
</div>

</Melayout>