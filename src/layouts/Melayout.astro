---
const { idToGo } = Astro.props

let idToGoBack

if(idToGo >= 2) idToGoBack = idToGo - 2
else idToGoBack = idToGo + 1
---

<div
  class={`
    min-h-[80vh]
    h-screen
    flex
    flex-col
    items-center
    justify-center
    m-5
    mt-16
    lg:mt-5
    overflow-x-hidden
  `}
>
    <div
      class=`
        h-5/6
        w-full
        lg:w-3/4
        bg-gray-800/40
        rounded-[3vw]
        flex
        flex-col
        lg:flex-row
        shadow-2xl 
        shadow-acid-green/50 
        p-1
        px-2
        lg:p-0
        max-w-2xl
        lg:max-w-full
      `
    >
      <div class=`
          pt-5
          lg:my-20
          lg:mx-20
          flex
          flex-col
          lg:w-full
          mb-5
        `
      >
 
      <slot />
      
    </div>
</div>
  <div
    class=`
      relative
      bottom-0
      text-xl
      flex
      `
  >
    <a href=`#${idToGoBack}`>
      <img src="/icons/arrow-up.svg" class="max-w-12" />
      <p class="text-sm text-center">{idToGo === 1 ? "Bottom" : "Previous"}</p>
    </a>
    <a href=`#${idToGo}`>
      <img src="/icons/arrow-down.svg" class="max-w-12" />
      <p class="text-sm text-center">{idToGo === 0 ? "Top" : "Next"}</p>
    </a>
  </div>